/* components/redCourses/redCourses.wxss */
.hotCourse_box {
  display: flex;
  width: 100%;
  padding: 22rpx 11rpx 0;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.hotCourseItem {
  width: 364rpx;
  height: 355rpx;
}
.hotCourseItemLink {
  padding: 11rpx 11rpx 0 ;
  box-sizing: border-box;
}

.hotCourseItem-img {
  width: 342rpx;
  height: 258rpx;
  margin: 0 auto;
}
.hotCourseItem-img image {
  width: 100%;
  height: 100%;
}
.hotCourseItem-title {
  font-size: 24rpx;
  padding: 10rpx 0;
  text-overflow: ellipsis;
	display: -webkit-box;  
	-webkit-line-clamp: 2; 
	-webkit-box-orient: vertical;

}
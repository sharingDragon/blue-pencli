/* pages/course/course.wxss */
.course-box {
  width: 100%;
  box-sizing: border-box;
}
.navSequence-box {
  width: 100%;
  margin-top: 20px;
  height: 75rpx !important;
}
.navSequences {
  height: 75rpx !important;
}
.navSequenceItem {
  display: block;
  height: 75rpx !important;
  line-height: 75rpx;
  text-align: center;
  font-size: 33rpx;
  margin-left: 15rpx;
  color: #8c8c8c;
}
.navSequence-box .selectedItems {
  font-size: 40rpx;
  color: black;
}
/*  */
.contentPortion-box {
  width: 100%;
  padding: 30rpx 32rpx ;
  box-sizing: border-box;
}
.search-box {
  display: flex;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  align-items: center;
  padding: 0 30rpx;
  border-radius: 15rpx;
  border: 1px solid #e6e6e6;
  background-color: #F8F8F8;
  margin-bottom: 20rpx;
}
.search-box .images {
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}
.search-box input {
  font-size: 29rpx;
}
/* 横幅 */
.banner {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.banner-img {
  width: 100%;
}
.banner-img .banner-image {
  width: 100%;
  height: 274rpx;
  border-radius: 10rpx;
}
/* 筛选内容 */
.screen {
  width: 100%;

}
.screen .screenList {
  display: flex;
  /* height: 198rpx; */
  flex-wrap: wrap;
  overflow: hidden;
  transition: all 0.5s;
}
.screen .screenList .screenItem {
  display: block;
  padding: 4rpx 22rpx ;
  text-align: center;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #5b6164;
  margin: 10rpx 16rpx 0 0;
  white-space: nowrap;
  border-radius: 28rpx;
  box-sizing: border-box;
}
.screen .screenList .screenItem.selectscreen {
  color: #1c9fea;
  background-color:rgba(28,159,234,.1);
}
.screen .more {
  height: 76rpx;
  margin-top: 24rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 30rpx;
  background-color: #F7F7F7;
  border-radius: 38rpx;
}

/* 箭头 */
.arrowsimage {
  width: 30rpx;
  height: 20rpx;
  transition: all 0.5s;
} 
.arrowsimage.unfold {
  transform:  rotate(180deg);
}
/* 内容列表 */
.contentsList {
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.contentsList .contentsListItem {
  width: 100%;
  height: 197rpx;
  display: flex;
  margin-bottom: 32rpx;
}
/* 图片 */
.contentsList .contentsListItem .contentsListItem-img {
  width: 262rpx;
  height: 100%;
  border-radius: 10rpx;
}

.contentsList .contentsListItem .contentsListItem-title {
  width: 400rpx;
  margin-left: 10rpx;
}
.contentsListItemTitles {
  display: block;
  width: 100%;
  height: 80rpx;
  font-size: 29rpx;
  box-sizing: border-box;
}
/* 作者 */
.contentsListItem-profile {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
}
.profile-avatar {
  display: flex;
  font-size: 25rpx;
  align-items: center;
}
.profile-avatar-img {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.preview_lesson {
  font-size: 27rpx;
}
/*  */
.manyPeople {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
  justify-content: space-between;
  
}
.study_num {
  font-size: 27rpx;
  color: #8c8c8c;
}
.free-nologin {
  display: flex;
  width: 210rpx;
  height: 44rpx;
  justify-content: space-between;
  font-size: 20rpx;
  border: 1px solid #ff5900;
  border-radius: 7rpx;
  line-height: 44rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}
.free-nologin .origin_rmb_price {
  width: 50%;
  box-sizing: border-box;
  color: #ff5900;
}
.free-nologin .free {
  width: 50%;
  background-color: #ff5900;
  color: white;
  box-sizing: border-box;
  margin-top: -1rpx;
}
